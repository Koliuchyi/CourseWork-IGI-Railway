@model BLL.DTO.CarriageDTO

@{
    Layout = "_ManagerLayout";
}

@{ ViewData["Title"] = "Удаление вагона"; }

<div class="container">
    <h1>Удаление вагона</h1>

    <h3>Вы действительно хотите удалить?</h3>
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Номер
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Id)
            </dd>
            <dt class="col-sm-2">
                Имя
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2">
                Кол-во мест
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PlacesCount)
            </dd>
            <dt class="col-sm-2">
                Тип вагона
            </dt>
            <dd class="col-sm-10">
                <img src="@Url.Content(Model.TypeCarriage.Photo)" class="img-fluid news-photo" alt="Фото типа поезда">
            </dd>
        </dl>
        <br>
        <form asp-action="DeleteCarriage">
            <input type="submit" value="Удалить" class="btn btn-danger m-1" />
            <a asp-action="ShowAllCarriages" class="m-1">Назад</a>
        </form>
    </div>
</div>