@model BLL.DTO.CarriageDTO
@{ ViewData["Title"] = "Создание вагона"; }
@{
    Layout = "_ManagerLayout";
}

<div class="container">
    <h1>Добавление вагона</h1>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="CreateCarriage">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label">Название</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PlacesCount" class="control-label">Кол-во мест</label>
                    <input asp-for="PlacesCount" class="form-control"/>
                    <span asp-validation-for="PlacesCount" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TypeCarriageId" class="control-label">Тип вагона</label>
                    <select asp-for="TypeCarriageId" class="form-control" asp-items="@ViewBag.CarriageTypes"></select>
                    <span asp-validation-for="TypeCarriageId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <br>
                    <button type="submit" class="btn btn-primary">Добавить</button>
                </div>
            </form>
        </div>
    </div>
    <div>
        <a asp-action="ShowAllCarriages">Назад</a>
    </div>
</div>