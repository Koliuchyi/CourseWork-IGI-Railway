@model BLL.DTO.CountryDTO

@{
    Layout = "_ManagerLayout";
}

@{ ViewData["Title"] = "Редактирование страны"; }

<div class="container">
    <h1>Обновление страны</h1>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post" asp-action="UpdateCountry" asp-route-id="@Model.Id">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label">Название страны</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Photo" class="control-label">Фото</label>
                    <input asp-for="Photo" class="form-control" />
                    <span asp-validation-for="Photo" class="text-danger"></span>
                </div>
                <br>
                <div class="form-group">
                    <input type="submit" value="Сохранить" class="btn btn-success" />
                </div>
            </form>
        </div>
    </div>
    <div>
        <a asp-action="ShowAllCountries">Назад</a>
    </div>
</div>