@model BLL.DTO.StationDTO

@{
    Layout = "_ManagerLayout";
}

@{ ViewData["Title"] = "Редактирование станции"; }

<div class="container">
    <h1>Обновление станции</h1>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post" asp-action="UpdateStation" asp-route-id="@Model.Id">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label">Название станции</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CityId" class="control-label">Название города</label>
                    <select asp-for="CityId" class="form-control" asp-items="@ViewBag.Cities"></select>
                    <span asp-validation-for="CityId" class="text-danger"></span>
                </div>
                <br>
                <div class="form-group">
                    <input type="submit" value="Сохранить" class="btn btn-success" />
                </div>
            </form>
        </div>
    </div>
    <div>
        <a asp-action="ShowAllStations">Назад</a>
    </div>
</div>