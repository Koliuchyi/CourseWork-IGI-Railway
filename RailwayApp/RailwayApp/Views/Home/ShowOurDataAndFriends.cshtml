@model IEnumerable<BLL.DTO.CountryDTO>
@{
    Layout = "_Layout";
}



<div class="container-fluid">
    <div class="table-wrapper">
        <table class="table table-striped table-hover table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>
                        Страна обслуживания
                    </th>
                    <th>
                        Государственный флаг
                    </th>
                    <th>
                        Логотип офиса в этой стране
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(model => item.Name)
                        </td>
                        <td>
                            <img src="@item.Photo" alt="Государственный флаг" class="img-thumbnail">
                        </td>
                        @{
                            if (item.Name == "Республика Беларусь")
                            {
                                <td>
                                    <img src="https://avatars.mds.yandex.net/i?id=a1dc8428fa00a09c199678d53bdf97568948df0d-8484366-images-thumbs&n=13" alt="Фото" class="img-thumbnail">
                                </td>
                            }
                            else
                            {
                                <td>
                                    <img src="https://www.diaconia.ru/files/58ee5c/f4416d/a1cb67/8b4567/_rzd_logo.jpg" alt="Фото" class="img-thumbnail">
                                </td>
                            }
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6">
            <h2>Контактная информация</h2>
            <ul class="list-unstyled">
                <li><i class="fas fa-phone-alt"></i> Контактный телефон: +375447533748</li>
                <li><i class="far fa-envelope"></i> Email: ilia.yozhikov@yandex.ru</li>
                <li><i class="fas fa-map-marker-alt"></i> Главный офис: г.Гомель, проспект Октября 48а</li>
            </ul>
        </div>
        <div class="col-md-6">
            <h2>Расположение офиса</h2>
            <div class="map-container">
                <iframe src="https://yandex.ru/map-widget/v1/?um=constructor%3A54cb14ed1884678e12aadc828e8743ad345561dacb1da357da0ea7d102cb0c7e&amp;source=constructor" width="616" height="524" frameborder="0"></iframe>
            </div>
        </div>
    </div>
</div>