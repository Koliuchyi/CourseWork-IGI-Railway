<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>RailwayApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/RailwayApp.styles.css" asp-append-version="true"/>
</head>
<body>
<header>
<nav class="navbar navbar-expand-lg navbar-light bg-light bg-gradient">
    <div class="container-fluid">
        <a class="navbar-brand" asp-controller="Manager" asp-action="Index">
            <img src="~/images/logo.png" alt="Железная дорога" width="70" height="50" class="d-inline-block align-top" />
            Hedgehog Railway
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Manager" asp-action="ShowAllRoutes">Маршруты</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                       data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Транспорт
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" asp-controller="Manager" asp-action="ShowAllTrains">Поезда</a>
                        <a class="dropdown-item" asp-controller="Manager" asp-action="ShowAllTypeTrain">Типы поездов</a>
                        <a class="dropdown-item" asp-controller="Manager" asp-action="ShowAllCarriages">Вагоны</a>
                        <a class="dropdown-item" asp-controller="Manager" asp-action="ShowAllTypeCarriage">Типы вагонов</a>
                    </div>
                </li>
                <li class="nav-item">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                       data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Остановки
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" asp-controller="Manager" asp-action="ShowAllCountries">Страны</a>
                        <a class="dropdown-item" asp-controller="Manager" asp-action="ShowAllCities">Города</a>
                        <a class="dropdown-item" asp-controller="Manager" asp-action="ShowAllStations">Станции</a>
                    </div>
                </li>
                <li class="nav-item">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                       data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Отчетность
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" asp-controller="Manager" asp-action="PopulationDiagram">Популярные маршруты</a>
                    </div>
                </li>
            </ul>

            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="#">
                        Менеджер
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Admin" asp-action="Exit">
                        <img src="~/images/exit.png" alt="Пользователь" width="30" height="30" class="d-inline-block align-top"/>
                        Выйти
                    </a>
                </li>
            </ul>
        </div>
    </div>
</nav>


</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2024 - Hedgehog Railway Company - Все права защищены.
        <p>Наши контакты - <a href="https://vk.com/al_feed.php"> автор сайта</a></p>
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>