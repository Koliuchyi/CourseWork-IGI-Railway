@model IEnumerable<BLL.DTO.NewsTableDTO>
@{
    Layout = "_ClientLayout";
    ViewData["Title"] = "Home Page";
}
<div class="container-fluid my-carousel">
    <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
      <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
      </div>
      <div class="carousel-inner">
          <div class="carousel-item active">
              <div class="carousel-caption d-none d-md-block">
                  <h5>Путешествуйте с комфортом</h5>
                  <p>Наша компания гарантирует вам комфортное путешествие на выбор из 5 разных условий поездки.</p>
              </div>
              <img src="https://eiti.org/sites/default/files/styles/hero_banner_desktop/public/featured_images/gleise-1555348_1920.jpg?itok=ta1bocr8" class="d-flex w-100" alt="...">
          </div>
          <div class="carousel-item">
              <div class="carousel-caption d-none d-md-block">
                  <h5>Любуйтесь природой вместе с Hedgehog Railway Company</h5>
                  <p>Используя нашу компанию, вы получите прекрасную возможность изучать мир.</p>
              </div>
              <img src="https://poseydon-tur.ru/poezd1.jpg" class="d-flex w-100" alt="...">
          </div>
          <div class="carousel-item">
              <div class="carousel-caption d-none d-md-block">
                  <h5>Безопасность превыше всего</h5>
                  <p>Избегайте перехода железнодорожных путей вне установленных для этого мест.</p>
              </div>
              <img src="https://sgllp.com/wp-content/uploads/SG-CareersImages-Concept3.jpg" class="d-flex w-100" alt="...">
          </div>
      </div>
      <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </button>
      <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </button>
    </div>
</div>




<div class="shadow p-3 mb-5 bg-white rounded">
    <h2 class="text-center mb-4">Поиск билетов</h2>
    <form asp-action="Index" method="post">
        <div class="row align-items-center">
            <div class="col-md-4 mb-3">
                <select class="form-control" id="departure" asp-items="@ViewBag.Stations" name="DepartureName">
                    <option value="">Выберите пункт отправления</option>
                </select>
            </div>
            <div class="col-md-4 mb-3">
                <select class="form-control" id="arrival" asp-items="@ViewBag.Stations" name="ArrivalName">
                    <option value="">Выберите пункт прибытия</option>
                </select>
            </div>
            <div class="col-md-3 mb-3">
                <input type="date" id="travelDate" name="DateRoute" class="form-control" placeholder="Дата поездки" aria-label="Дата поездки" aria-describedby="date">
            </div>
            <div class="col-md-1 mb-3">
                <input value="Найти" class="btn btn-primary btn-block" type="submit"/>
            </div>
        </div>
    </form>
</div>

@section Scripts
{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/css/select2.min.css"/>
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/js/select2.min.js"></script>
    <script type="text/javascript">
        $(function () {
           $('#departure, #arrival').select2(); 
        });
    </script>
    <script>
            $(document).ready(function () {
                @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                {
                    <text>
                        $("#errorModal").modal('show');
                        $("#errorMessage").text("@Html.Raw(ViewBag.ErrorMessage)");
                    </text>
                }
            });
            $(document).on("click", "#closeErrorModalBtn", function () {
                        $("#errorModal").modal("hide");
                    });
    </script>
}




