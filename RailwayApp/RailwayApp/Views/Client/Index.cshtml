<hr>

<div class="container" id="news">
    <div class="row">
        <p class="fw-normal fs-3 text-center">Новостная панель</p>
        <hr>
    </div>
    @{
        int i = 1;
        @foreach (var newsItem in Model)
        {
            <div class="row mb-3">
                <div class="col-12">
                    <div class="card border border-danger">
                        <div class="row g-0">
                            @if (i % 2 == 0)
                            {
                                <div class="col-md-4 order-md-last text-md-end">
                                    <img src="@newsItem.Photo" alt="Фото" class="img-fluid rounded-circle" style="max-height: 200px;">
                                </div>
                            }
                            <div class="col-md-8">
                                <div class="card-body p-3">
                                    <h5 class="card-title text-center">@Html.DisplayFor(model => newsItem.Title)</h5>
                                    <hr>
                                    <p class="card-text">@Html.DisplayFor(model => newsItem.Description)</p>
                                </div>
                            </div>
                            @if (i % 2 != 0)
                            {
                                <div class="col-md-4 order-md-first">
                                    <img src="@newsItem.Photo" alt="Фото" class="img-fluid rounded-circle" style="max-height: 200px;">
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
            i++;
        }
    }
</div>

<!-- Модальное окно с сообщением об ошибке -->
<div class="modal fade" id="errorModal" tabindex="-1" aria-labelledby="errorModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="errorModalLabel">Ошибка!</h5>
        <button type="button" class="close" data-dismiss="modal" id="closeErrorModalBtn" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p id="errorMessage"></p>
      </div>
      <div class="modal-footer">
        <button type="button" id="closeErrorModalBtn" class="btn btn-danger" data-dismiss="modal">Закрыть</button>
      </div>
    </div>
  </div>
</div>
